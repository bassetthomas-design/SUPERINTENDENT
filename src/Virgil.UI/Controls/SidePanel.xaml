<UserControl x:Class="Virgil.UI.Controls.SidePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Border Style="{StaticResource Card}" Padding="12">
    <StackPanel>
      <TextBlock Text="Système" Style="{StaticResource Txt.Title}" Margin="0,0,0,8"/>
      <StackPanel>
        <TextBlock Style="{StaticResource Txt.Mute}" Text="CPU"/>
        <ProgressBar Minimum="0" Maximum="100" Value="{Binding CpuUsage}" Height="8" Margin="0,4,0,8"/>
        <TextBlock Style="{StaticResource Txt.Mute}" Text="RAM"/>
        <ProgressBar Minimum="0" Maximum="100" Value="{Binding RamUsage}" Height="8" Margin="0,4,0,8"/>
        <TextBlock Style="{StaticResource Txt.Mute}" Text="Température"/>
        <ProgressBar Minimum="0" Maximum="100" Value="{Binding TempPct}" Height="8" Margin="0,4,0,8"/>
      </StackPanel>
    </StackPanel>
  </Border>
</UserControl>

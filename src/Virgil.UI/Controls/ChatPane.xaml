<UserControl x:Class="Virgil.UI.Controls.ChatPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Border Style="{StaticResource HoloCard}">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
      <ItemsControl ItemsSource="{Binding Messages}">
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <Border Margin="0,6" Padding="10" CornerRadius="10" Background="#1600FFFF">
              <StackPanel>
                <TextBlock Text="{Binding Role}" Style="{StaticResource Text.Sub}"/>
                <TextBlock Text="{Binding Text}" Style="{StaticResource Text.Body}">
                  <TextBlock.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                      <BeginStoryboard>
                        <Storyboard>
                          <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.20"/>
                          <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,12,0,0" To="0,0,0,0" Duration="0:0:0.20"/>
                        </Storyboard>
                      </BeginStoryboard>
                    </EventTrigger>
                  </TextBlock.Triggers>
                </TextBlock>
              </StackPanel>
            </Border>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </ScrollViewer>
  </Border>
</UserControl>

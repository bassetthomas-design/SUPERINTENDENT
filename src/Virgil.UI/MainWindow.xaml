<Window x:Class="Virgil.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Virgil — SURINTENDENT" Height="720" Width="1180">
  <Grid Background="{StaticResource Bg}">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="360"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <!-- Colonne gauche : avatar + jauges -->
    <Border Grid.Column="0" Margin="16" Background="{StaticResource Panel}" CornerRadius="16">
      <StackPanel Margin="16">
        <TextBlock Text="Avatar (mock)" Foreground="{StaticResource Accent}" FontSize="28" Margin="0,0,0,16"/>
        <TextBlock Text="CPU %" Foreground="White"/>
        <StackPanel Orientation="Horizontal">
          <ProgressBar x:Name="CpuBar" Height="14" Width="220" Minimum="0" Maximum="100"/>
          <TextBlock x:Name="CpuLbl" Foreground="White" Margin="8,0,0,0"/>
        </StackPanel>

        <TextBlock Text="GPU % / °C" Foreground="White" Margin="0,8,0,0"/>
        <StackPanel Orientation="Horizontal">
          <ProgressBar x:Name="GpuBar" Height="14" Width="200" Minimum="0" Maximum="100" Margin="0,0,8,0"/>
          <TextBlock x:Name="GpuTemp" Foreground="White"/>
        </StackPanel>

        <TextBlock Text="RAM %" Foreground="White" Margin="0,8,0,0"/>
        <StackPanel Orientation="Horizontal">
          <ProgressBar x:Name="RamBar" Height="14" Width="220" Minimum="0" Maximum="100"/>
          <TextBlock x:Name="RamLbl" Foreground="White" Margin="8,0,0,0"/>
        </StackPanel>

        <TextBlock Text="Disk Free %" Foreground="White" Margin="0,8,0,0"/>
        <StackPanel Orientation="Horizontal">
          <ProgressBar x:Name="DiskBar" Height="14" Width="220" Minimum="0" Maximum="100"/>
          <TextBlock x:Name="DiskLbl" Foreground="White" Margin="8,0,0,0"/>
        </StackPanel>

        <TextBlock Text="Top Process" Foreground="White" Margin="0,8,0,0"/>
        <TextBlock x:Name="TopProc" Foreground="White"/>
      </StackPanel>
    </Border>

    <!-- Colonne droite : contenu scrollable + actions -->
    <Border Grid.Column="1" Margin="8,16,16,16" Background="{StaticResource Panel}" CornerRadius="16">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="*"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- unique enfant du ScrollViewer : un StackPanel -->
        <ScrollViewer Grid.Row="0" Margin="16">
          <StackPanel>
            <TextBlock Text="Bulles (mock)" Foreground="White"/>
            <TextBlock x:Name="Updated" Foreground="#7aa" Margin="0,12,0,0"/>
          </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="16">
          <TextBlock Text="Actions" Foreground="#7AA" FontSize="16" Margin="0,8,0,6"/>
          <StackPanel Orientation="Horizontal">
            <Button x:Name="BtnClean"  Content="Nettoyage complet" Width="180" Height="32" Margin="0,0,8,0" Click="BtnClean_Click"/>
            <Button x:Name="BtnUpdate" Content="Mises à jour (Tout)" Width="180" Height="32" Click="BtnUpdate_Click"/>
          </StackPanel>
          <TextBlock x:Name="ActionStatus" Foreground="#9bd" Margin="0,8,0,0"/>
        </StackPanel>
      </Grid>
    </Border>
  </Grid>
</Window>


<Window x:Class="Virgil.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Virgil.UI"
        xmlns:ctrl="clr-namespace:Virgil.UI.Controls"
        Title="SUPERINTENDENT" Height="720" Width="1180"
        Background="{StaticResource Brush.Bg}">
  <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Top bar -->
    <DockPanel Grid.Row="0" Margin="0,0,0,12">
      <TextBlock Text="{Binding Title}" Style="{StaticResource Text.Title}" />
    </DockPanel>

    <!-- Body -->
    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="310"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <!-- Avatar + état -->
      <Border Grid.Column="0" Style="{StaticResource HoloCard}">
        <StackPanel>
          <ctrl:VirgilAvatar Emotion="{Binding Emotion}" />
          <Separator Margin="0,12"/>
          <TextBlock Text="État système" Style="{StaticResource Text.Sub}" Margin="0,0,0,6"/>
          <TextBlock Text="{Binding Emotion}" Style="{StaticResource Text.Body}"/>
        </StackPanel>
      </Border>

      <!-- Chat -->
      <ctrl:ChatPane Grid.Column="1"/>
    </Grid>

    <!-- Actions -->
    <ctrl:ActionBar Grid.Row="2" />
  </Grid>
</Window>
